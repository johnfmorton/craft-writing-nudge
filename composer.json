{
  "name": "johnfmorton/craft-writing-nudge",
  "description": "Control panel widget gently nudging you to keep writing.",
  "type": "craft-plugin",
  "license": "proprietary",
  "support": {
    "email": "john@johnfmorton.com",
    "issues": "https://github.com/johnfmorton/craft-writing-nudge/issues?state=open",
    "source": "https://github.com/johnfmorton/craft-writing-nudge",
    "docs": "https://github.com/johnfmorton/craft-writing-nudge",
    "rss": "https://github.com/johnfmorton/craft-writing-nudge/releases.atom"
  },
  "require": {
    "php": ">=8.2",
    "craftcms/cms": "^5.4.0"
  },
  "require-dev": {
    "craftcms/ecs": "dev-main",
    "craftcms/phpstan": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "johnfmorton\\craftwritingnudge\\": "src/"
    }
  },
  "extra": {
    "handle": "writing-nudge",
    "name": "Writing Nudge",
    "developer": "John F Morton",
    "documentationUrl": "https://github.com/johnfmorton/craft-writing-nudge",
    "class": "johnfmorton\\craftwritingnudge\\WritingNudge"
  },
  "scripts": {
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix",
    "phpstan": "phpstan --memory-limit=1G"
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.2"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  }
}